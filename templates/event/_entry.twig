{% extends "_layout.twig" %}

{% set featureImage = {
  mode: 'crop',
  quality: 90
} %}

{% block content %}
<h1 class="text-4xl text-black font-display my-4">{{ entry.title }}</h1>

<time class="text-sm block pb-4" datetime="{{ entry.postDate | date('Y-m-d') }}">{{ entry.postDate | date('d M Y') }}</time>
<p>{{ entry.eventSummary }}</p>

<h1 class="text-2xl text-black font-display my-4">Artists</h1>

<ul>
  {% for artist in entry.eventArtists.all() %}
    <li>- {{ artist.title }}</li>
  {% endfor %}
</ul>

<p>{{ entry.price }}</p>

<p>{{ someFunction('something') }}</p>

{% endblock %}
